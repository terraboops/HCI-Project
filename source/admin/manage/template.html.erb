<div class="spacer"></div>
<a class="btn btn-primary btn-large" href="/admin">Main Menu</a>
<h2>Manage <%= site.title %></h2>
<% if site.note %>
	<h4><strong>Note:<strong> <%= site.note %></h4>
<% end %>
<form class="well">
	<input id="checkall" style="margin: 10px; margin-right: 20px;" type="checkbox" />
	<a class="btn btn-primary" href="#">Add</a>
	<a class="btn btn-primary" href="#">Delete</a>
	<a class="btn btn-primary" href="#">Edit</a>
	<div class="spacer"></div>
	<table class="table table-striped table-bordered">
	<% for i in 1..5 %>
		<tr>
			<td><input type="checkbox" /></td>
		<% for i in 1..site.columns %>
			<td><%= lorem.last_name %></td>
		<% end %>
		</tr>
	<% end %>
	</table>
</form>
<% if site.sendEmail %>
	<a class="btn btn-primary btn-large pull-right" href="/admin/send.html">Send New Email</a>
<% end %>
<script type="text/javascript">
	$(document).ready(function() {
		$('#checkall').click(function() {
			if(!this.checked) {
				$('table input:checked').click();
			}
			else {
				$('table input:not(:checked)').click();
			}
		});
	})
</script>