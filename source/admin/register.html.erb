	<label for="pass" class="pull-left" style="width: 100px; line-height: 28px;">Password:</label>
	<input type="text" style="width: 320px;" id="pass" />
	<div class="clearfix"></div>
	<label for="repeat" class="pull-left" style="width: 100px; line-height: 28px;">Repeat PW:</label>
	<input type="text" style="width: 320px;" id="repeat" />
